[flake8]
# Max line length (match Black default)
max-line-length = 88

# Ignore rules that conflict with Black or are outdated
extend-ignore =
    E203,  # Whitespace before ':' (conflicts with Black)
    W503,  # Line break before binary operator (outdated)
    E501   # Line too long (Black handles this)

# Exclude directories
exclude =
    .git,
    __pycache__,
    outputs,
    logs,
    venv,
    .venv,
    .env,
    build,
    dist,
    *.egg-info

# Complexity warning threshold (CC < 6)
max-complexity = 6

# Show source code for errors
show-source = True

# Show statistics at the end
statistics = True

# Count errors
count = True
